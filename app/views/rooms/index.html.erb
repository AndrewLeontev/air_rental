<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to fa_icon('fa fa-list-alt', t(:label_manage_listings)), rooms_path, class: 'sidebar-link active'%></li>
      <li class="sidebar-item"><%= link_to fa_icon('fas fa-hotel', t(:label_my_reservations)), rooms_path, class: 'sidebar-link active'%></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header"><%= t(:label_listings) %></div>
      <div class="card-body">
        <% @rooms.each do |room| %>
          <div class="row">
            <div class="col-md-2">
              <%= image_tag room.cover_photo(:thumb), class: 'room_thumb_photo' %>
            </div>

            <div class="col-md-7">
              <h4><%= link_to room.listing_name, room_path(room) %></h4>
            </div>
            <div class="col-md-3">
              <%= link_to t(:label_update), listing_room_path(room), class: 'btn btn-form' %>
            </div>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>