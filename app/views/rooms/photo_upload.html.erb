<div class="row">
  <div class="col-md-3">
    <%= render partial: 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        <%= t(:label_photo_upload) %>
      </div>
      <div class="card-body">
        <div class="container">
          <div class="row">
            <div class="col-md-offset-3 col-md-12">
              <%= form_for @room, url: room_photos_path(@room), method: 'post', html: {multipart: true} do |f| %>
                <div class="row mx-auto d-block">
                  <div class="form-group">
                    <span class="btn btn-default btn-file text-babu">
                      <%= fa_icon('fas fa-cloud-upload-alt', t(:label_select_photo)) %>
                      <%= file_field_tag 'images[]',  type: :file, multiple: true %>
                    </span>
                  </div>
                </div>

                <div class="text-center">
                  <%= button_tag fa_icon('fas fa-upload', t(:label_add_photos)), class: 'btn btn-form' %>
                </div>
              <% end %>
            </div>
          </div>

          <div id="photos">
            <%= render partial: 'photos/photos_list' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>