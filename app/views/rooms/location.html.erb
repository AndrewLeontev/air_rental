<div class="row">
  <div class="col-md-3">
    <%= render partial: 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        <%= t(:label_location) %>
      </div>
      <div class="card-body">
        <div class="container">
          <%= form_for @room do |f| %>

            <div class="row">
              <div class="form-group">
                <label for="room_address"><%= t(:label_address) %></label>
                <%= f.text_field :address, class: 'form-control', required: true %>
              </div>
            </div>

            <div class="text-center">
              <%= button_tag fa_icon('far fa-save', t(:label_save)), class: 'btn btn-form' %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>