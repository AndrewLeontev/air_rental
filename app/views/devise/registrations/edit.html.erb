<div class="row justify-content-md-center">
  <div class="col-md-6 col-md-offset-6">

    <h2 class="text-center"><%= t(:label_edit_profile) %></h2>
    <br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render partial: 'shared/devise_messages', resource: resource %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, required: true, placeholder: t(:label_email), class: 'form-control'  %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.text_field :fname, required: true, placeholder: t(:label_fname), class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.text_field :lname, required: true, placeholder: t(:label_lname), class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: t(:label_new_password_with), class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: t(:label_password_confirmation), class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :current_password, placeholder: t(:label_current_password), class: 'form-control' %>
      </div>

      <div class="actions">
        <%= button_tag fa_icon('far fa-save', t(:label_update)), type: :submit, class: 'btn btn-primary' %>
        <span><%= link_to t(:label_back), :back %></span>
      </div>

    <% end %>

    <br>
    <h3><%= t(:info_cancel_account) %></h3>

    <p><%= link_to fa_icon('far fa-trash-alt', t(:label_cancel_account)), registration_path(resource_name), data: { confirm: t(:label_confirmation) }, method: :delete, class: 'btn btn-danger' %></p>
  </div>
</div>