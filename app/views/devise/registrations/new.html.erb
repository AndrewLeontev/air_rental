<div class="row justify-content-md-center">
  <div class="col-md-6 col-md-offset-6">

    <h2 class="text-center"><%= t(:label_registration) %></h2>
    <br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, required: true, placeholder: t(:label_email), class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.text_field :fname, required: true, placeholder: t(:label_fname), class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.text_field :lname, required: true, placeholder: t(:label_lname), class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, required: true, placeholder: t(:label_password_with_characters, count: @minimum_password_length || 0), class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, required: true, placeholder: t(:label_password_confirmation), class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit t(:label_registration), class: 'btn btn-primary' %>
      </div>
    <% end %>

  </div>
</div>