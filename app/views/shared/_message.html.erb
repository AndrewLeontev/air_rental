<% unless flash.empty? %>
  <script type="text/javascript" charset="utf-8">
    <% flash.each do |key, value| %>
      <% type = key.to_s.gsub('alert', 'error').gsub('notice', 'success') %>
      toastr.options.positionClass = 'toast-top-full-width';
      toastr['<%= type %>']('<%= value %>')
    <% end %>
  </script>
<% end %>