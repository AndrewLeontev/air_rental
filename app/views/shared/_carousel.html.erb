<% if photos.any? %>
  <div id="carouselExampleIndicators" class="carousel slide carousel-fade col-md-12" data-ride="carousel">
    <ol class="carousel-indicators">
      <% photos.each do |photo| %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= photo.id %>" class="<%= 'active' if photo.id == photos.first.id %>"></li>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <% photos.each do |photo| %>
        <div class="carousel-item<%= ' active' if photo.id == photos.first.id %>">
          <%= image_tag photo.image.url, class: 'd-block w-100' %>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
<% end %>