<div class="row">
  <div class="col-md-3">
    <div class="center">
      <%= image_tag avatar_url(@user), class: 'avatar-full' %>
    </div>
    <div class="card">
      <div class="card-header"><%= t(:label_verification) %></div>
      <div class="card-body">
        <%= t(:label_email_address) %><br>
        <%= t(:label_phone_number) %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <h2><%= @user.fullname %></h2>

    <div class="description row-space-3">
      <% @user.description %>
    </div>
  </div>
</div>