<% if @photos.any? %>
  <br><br>

  <div class="row">
    <% @photos.each do |photo| %>
      <div class="col-md-4" id="room_photo_<%= photo.id %>">
        <div class="card">
          <div class="card-header preview">
            <%= image_tag photo.image.url %>
          </div>
          <div class="card-body">
            <div class="pull-right">
              <%= link_to fa_icon('fa fa-trash-alt'), room_photo_path(photo.room_id, photo), remote: true, method: :delete, data: { confirm: t(:label_confirmation) } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>